package com.breno.temporaries;

public class Node {

	Node right = null;
	Node left = null;
	int data;
	
	Node(int data) {
		this.data = data;
	}

	public Node add(data) {
		if (head == null) {
			return new Node(data);
		}
	
		if (head.left == null && head.data > data) {
			head.left = new Node(data);
			return head;
		} else if (head.right == null && head.data < data) {
			head.right = new Node(data);
			return head;
		}
	
		if (head.data > data) {
			head.add(head.left, data);
		} else if (head.data < data) {
			head.add(head.right, data);
		} else {
			return head; // se head.data == data
		}
	}
}

