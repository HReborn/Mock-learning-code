package com.breno.temporaries;

public class Node {

	Node right = null;
	Node left = null;
	int data;
	
	Node(int data) {
		this.data = data;
	}

	public Node add(int data) {
		if (left == null && this.data > data) {
			left = new Node(data);
			System.out.println("Adicionou " + data + " na esquerda.");
			return left;
		} else if (right == null && this.data < data) {
			right = new Node(data);
			System.out.println("Adicionou " + data + " na esquerda.");
			return right;
		}
	
		if (this.data > data) {
			return left.add(data);
		} else if (this.data < data) {
			right.add(data);
		} 
		System.out.println("Não adicionou nada. Valor já existe na árvore.");
		return this;
	}
}

